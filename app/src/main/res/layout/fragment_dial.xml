<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="contacts.xiaozuzu.github.io.contactsbook.fragment.DialFragment">
    <LinearLayout
        android:id="@+id/dial_broad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/del_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="删除"
                />
            <TextView
                android:id="@+id/display_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:text="" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"/>
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">
        <Button
            android:id="@+id/one"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:textSize="20sp"
            android:text="1"
            />
        <Button
            android:id="@+id/two"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:textSize="20sp"
            android:text="2"
            />
        <Button
            android:id="@+id/three"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:textSize="20sp"
            android:text="3"
            />
        <Button
            android:id="@+id/four"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:textSize="20sp"
            android:text="4"
            />
        <Button
            android:id="@+id/five"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:textSize="20sp"
            android:text="5"
            />
        <Button
            android:id="@+id/six"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:textSize="20sp"
            android:text="6"
            />
        <Button
            android:id="@+id/seven"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:textSize="20sp"
            android:text="7"
            />
        <Button
            android:id="@+id/eight"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:textSize="20sp"
            android:text="8"
            />
        <Button
            android:id="@+id/nine"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:textSize="20sp"
            android:text="9"
            />
        <Button
            android:id="@+id/star"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:textSize="20sp"
            android:text="*"
            />
        <Button
            android:id="@+id/zero"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:textSize="20sp"
            android:text="0"
            />
        <Button
            android:id="@+id/jing"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:textSize="20sp"
            android:text="#"
            />
    </GridLayout>
        <Button
            android:id="@+id/dial_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="拨号"/>
    </LinearLayout>
    <ListView
        android:id="@+id/hint_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/dial_broad">

    </ListView>
</RelativeLayout>
